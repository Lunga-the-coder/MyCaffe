@model IEnumerable<MyCaffe.Models.FoodItem>

@{
    ViewBag.Title = "Index";
}

<h2>Food Items</h2>

<p>
    <a type="button" class="btn btn-primary" href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus"></span>
        <span> Add New Food Item </span>
    </a>
</p> 

<style>
    body {
        background-color: bisque;
    }

    h3 {
        font-style: italic;
    }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {

    double price = item.Price;
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-za"))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            <img style="object-fit: cover" src="~/Uploads/@(item.ImageUrl)" width="80" height="80" />
        </td>
        <td>
            <a type="button" class="btn btn-success" href="@Url.Action("Edit")/@item.FoodItemId">
                <span class="glyphicon glyphicon-pencil"></span>
            </a>

            <a type="button" class="btn btn-primary" href="@Url.Action("Details")/@item.FoodItemId">
                <span class="glyphicon glyphicon-list"></span>
            </a>

            <a type="button" class="btn btn-danger" href="@Url.Action("Delete")/@item.FoodItemId">
                <span class="glyphicon glyphicon-trash"></span>
            </a>
        </td>
    </tr>
}

</table>
