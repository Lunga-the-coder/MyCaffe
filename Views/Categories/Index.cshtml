@model IEnumerable<MyCaffe.Models.Category>

@{
    ViewBag.Title = "Index";
}

<style>
    body {
        background-color: bisque;
    }

    h3 {
        font-style: italic;
    }
</style>

<h2>Categories</h2>

<p>
    <a type="button" class="btn btn-primary" href="@Url.Action("Create")">
        <span class="glyphicon glyphicon-plus"></span>
        <span> Add New Category </span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            <a type="button" class="btn btn-success" href="@Url.Action("Edit")/@item.CategoryId">
                <span class="glyphicon glyphicon-pencil"></span>
            </a>

            <a type="button" class="btn btn-primary" href="@Url.Action("Details")/@item.CategoryId">
                <span class="glyphicon glyphicon-list"></span>
            </a>

            <a type="button" class="btn btn-danger" href="@Url.Action("Delete")/@item.CategoryId">
                <span class="glyphicon glyphicon-trash"></span>
            </a>
        </td>
    </tr>
}

</table>
